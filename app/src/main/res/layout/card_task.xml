<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="345dp"
    android:layout_marginTop="@dimen/task_card_half_spacing"
    android:layout_marginBottom="@dimen/task_card_half_spacing"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_gravity="center"
    android:elevation="@dimen/cardview_elevation"
    card_view:cardCornerRadius="7dp">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessLeaf">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        tools:ignore="ContentDescription"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"

        android:id="@+id/image"/>

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:id="@+id/text2"
        android:text="Education Loans"


        android:layout_alignParentEnd="true"
        android:layout_marginTop="230dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        android:layout_below="@id/image"
        android:layout_marginTop="33dp"
        android:layout_marginStart="5dp"
        android:id="@+id/bldrs"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        android:layout_below="@id/bldrs"
        android:layout_marginTop="9dp"
        android:layout_marginStart="5dp"
        android:id="@+id/bldrs1"/>

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:id="@+id/text3"
        android:layout_below="@id/text2"
        android:layout_marginTop="2dp"
        android:text="Home Loans"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        android:layout_below="@id/bldrs1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:textSize="20sp"

        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:id="@+id/text4"
        android:layout_below="@id/text3"
        android:layout_marginTop="1dp"
        android:text="Car Loans"/>





</RelativeLayout>
</android.support.v7.widget.CardView>

